extends layout

block content
  h1.text-center.mb-4 All Games
  .row.row-cols-1.row-cols-md-2.row-cols-lg-3.g-4
    each game in games
      .col
        .card.h-100
          .card-body.text-center
            img(
              src= game.imageUrl ? game.imageUrl : "/images/game-" + game.id + ".png", 
              alt= game.title, 
              class="img-fluid mb-3", 
              style="max-height: 250px; object-fit: cover;"
            )
            h5.card-title= game.title
            p.card-text= game.description.substring(0, 100) + "..."
          .card-footer.text-center
            a.btn.btn-primary(href=`/games/${game.id}`) View Details
