doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title= title
    // Bootstrap 5 CSS CDN
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    // Your custom styles
    link(rel="stylesheet", href="/styles/style.css")
  body
    // Navigation Bar
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container
        a.navbar-brand(href="/") SteamLikeApp
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href="/games") Games
            li.nav-item
              a.nav-link(href="#announcements") Announcements
            li.nav-item
              if typeof user !== 'undefined' && user
                span.nav-link Hello, #{user.username}
              else
                span.nav-link Hello, Guest
            li.nav-item
              a.nav-link(href="/logout") Logout
    // Main Content
    .container.mt-4
      block content
    // Footer
    footer.text-center.mt-4.py-3.bg-dark.text-white
      .container
        p.mb-0 &copy; #{new Date().getFullYear()} SteamLikeApp. All rights reserved.
    // Bootstrap 5 JS Bundle CDN
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")

